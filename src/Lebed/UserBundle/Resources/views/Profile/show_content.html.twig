{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p> LoginName: {{ user.username }}</p>
    <p> Email: {{ user.email }}</p>
    <p> First Name: {{ user.firstName }}</p>
    <p> Last Name: {{ user.lastName }}</p>
    <p> Gender: {{ user.gender }}</p>
    <p> BirthDay: {{ user.birthday|date("m/d/Y") }}</p>
    <p> Defaul Time Limit: {{ user.timeLimit|date("H:i") }}</p>
    </br>
    <a class="btn-small"  href="{{ path('fos_user_profile_edit') }}" role="button">Edit Your Profile</a>

</div>
